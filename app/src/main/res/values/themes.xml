<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Whashow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. Theme.AppCompat.Light -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Customize your theme here. Theme.MaterialComponents -->
        <item name="windowActionBar">false</item> <!-- 기본 액션 바 비활성화 -->
        <item name="windowNoTitle">true</item> <!-- 기본 타이틀 비활성화 -->

    </style>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.MaterialComponents">
        <item name="android:textColor">@drawable/calender_selector_textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calender_selector_textcolor</item>
    </style>

    <!-- 캘린더의 요일에 적용되는 스타일 -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="">
        <item name="android:textColorPrimary">#7A3E65</item>
        <item name="android:textSize">16sp</item>
        <item name="selectableItemBackground">@color/gray</item>
        <item name="colorControlNormal">#7A3E65</item>
    </style>


    <style name="Theme.Whashow" parent="Base.Theme.Whashow" />
</resources>