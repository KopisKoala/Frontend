<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.SearchActivity">

        <!--검색 창-->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:focusable="true"
            android:padding="20dp"
            app:searchIcon="@drawable/ic_search"
            app:iconifiedByDefault="false"
            app:layout_constraintVertical_weight="1"
            app:queryHint="배우 또는 공연을 검색해 주세요."
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/actor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="배우 7건"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search" />

        <RelativeLayout
            android:id="@+id/rt_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actor_title">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="73dp"
                android:orientation="horizontal"
                tools:listitem="@layout/list_grid_recommand_item" />

        </RelativeLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>