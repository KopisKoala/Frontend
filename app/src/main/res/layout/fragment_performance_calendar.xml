<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.PerformanceCalendarFragment">
        <ScrollView
            android:id="@+id/sv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:background="@color/white"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cal_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/poster"
                                    android:layout_width="125dp"
                                    android:layout_height="match_parent"
                                    app:cardElevation="0dp"
                                    app:cardCornerRadius="28dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginStart="10dp"
                                    >
                                        <ImageView
                                            android:id="@+id/img_poster"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/img_poster"
                                            />
                                </androidx.cardview.widget.CardView>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="24dp">
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="#E6E6E6"
                                            android:layout_marginEnd="10dp"
                                            />
                                        <TextView
                                            android:id="@+id/genre"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/recommand_tag_ractangle"
                                            android:text="뮤지컬"
                                            android:textColor="@color/purple"
                                            android:fontFamily="@font/inter_semi_bold"
                                            android:textSize="10sp"
                                            android:layout_marginTop="13dp"
                                            android:paddingStart="11dp"
                                            android:paddingEnd="11dp"
                                            android:paddingTop="3dp"
                                            android:paddingBottom="3dp"/>
                                        <TextView
                                            android:id="@+id/poster_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="한여름 밤의 꿈"
                                            android:fontFamily="@font/inter_bold"
                                            android:textSize="15sp"
                                            android:textColor="@color/black"
                                            android:layout_marginTop="14dp"
                                            />
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="18dp"

                                            >
                                                <TextView
                                                    android:id="@+id/day"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="관람 일시"
                                                    android:fontFamily="@font/inter_medium"
                                                    android:textSize="13sp"
                                                    android:textColor="#7F7F7F"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    />
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:text="2024. 08. 03"
                                                    android:textColor="@color/black"
                                                    android:layout_marginEnd="10dp"
                                                    />
                                        </androidx.constraintlayout.widget.ConstraintLayout>


                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="13dp"
                                            >
                                                <TextView
                                                    android:id="@+id/performance_rating"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="관람 만족도"
                                                    android:fontFamily="@font/inter_medium"
                                                    android:textSize="13sp"
                                                    android:textColor="#7F7F7F"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    />
                                                <RatingBar
                                                    android:id="@+id/ratingBar"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:isIndicator="false"
                                                    style="?android:attr/ratingBarStyleSmall"
                                                    android:numStars="5"
                                                    android:rating="4"
                                                    android:stepSize="0.5"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginEnd="10dp"
                                                    android:progressTint="#FFE500"
                                                    android:progressBackgroundTint="@color/gray"
                                                    />
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="13dp"
                                            >
                                                <TextView
                                                    android:id="@+id/pair_rating"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="페어 만족도"
                                                    android:fontFamily="@font/inter_medium"
                                                    android:textSize="13sp"
                                                    android:textColor="#7F7F7F"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    />
                                                <RatingBar
                                                    android:id="@+id/ratingBar2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:isIndicator="false"
                                                    style="?android:attr/ratingBarStyleSmall"
                                                    android:numStars="5"
                                                    android:rating="3"
                                                    android:stepSize="0.5"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    android:layout_marginEnd="10dp"
                                                    android:progressTint="#FFE500"
                                                    android:progressBackgroundTint="@color/gray"
                                                    />
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E6E6E6"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="23dp"
                            android:layout_marginStart="10dp"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/my_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ic_review"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cal_review"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="15dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="내가 쓴 리뷰"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/inter_bold"
                                    app:layout_constraintStart_toEndOf="@id/ic_review"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="15dp"
                                    />
                                <ImageView
                                    android:id="@+id/plus1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cal_plus"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="15dp"
                                    />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/review_detail"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/review_corner_rectangle"
                            >
                                <LinearLayout
                                    android:id="@+id/review"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="15dp"
                                    >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="페어"
                                            android:fontFamily="@font/inter_medium"
                                            android:textSize="11sp"
                                            android:textColor="#80000000"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="7dp"
                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="손승연 나하나"
                                            android:fontFamily="@font/inter_medium"
                                            android:textSize="11sp"
                                            android:textColor="@color/purple"
                                            android:paddingStart="5dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="7dp"
                                            />

                                </LinearLayout>
                                <TextView
                                    android:id="@+id/review_context"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/review"
                                    app:layout_constraintBottom_toTopOf="@id/paring_feature"
                                    android:text="옥주현 배우와 정선아 배우의 연기가 너무 좋았어요. 다음에 위키드를 관람한다면 두 배우의 호흡을 보고 싶어요!"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginEnd="15dp"
                                    android:textSize="12sp"
                                    android:textColor="#B3000000"
                                   />
                                <TextView
                                    android:id="@+id/paring_feature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/pairing_purple_rectangle"
                                    android:paddingStart="6dp"
                                    android:paddingEnd="6dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp"
                                    android:text="# 짜릿하다"
                                    android:textSize="10sp"
                                    android:textColor="#7A3E65"
                                    android:fontFamily="@font/inter_regular"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/review_context"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="10dp"
                                    />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E6E6E6"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/make_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ic_people"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cal_perple"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="15dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="함께 본 사람"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/inter_bold"
                                    app:layout_constraintStart_toEndOf="@id/ic_people"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="15dp"
                                    />
                                <ImageView
                                    android:id="@+id/plus2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cal_plus"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="15dp"
                                    />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <HorizontalScrollView
                            android:id="@+id/people_detail"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="10dp">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <TextView
                                                    android:id="@+id/tag_text"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/with_corner_rectangle"
                                                    android:text="가족과 행복하게"
                                                    android:fontFamily="@font/inter_semi_bold"
                                                    android:textSize="11sp"
                                                    android:textColor="#7A3E65"
                                                    android:paddingStart="15dp"
                                                    android:paddingEnd="38dp"
                                                    android:paddingTop="7dp"
                                                    android:paddingBottom="7dp"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    android:layout_marginStart="10dp"
                                                    />
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:id="@+id/close"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text"
                                                    android:layout_marginEnd="9dp"
                                                    />
                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/ic_family"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text"
                                                    android:layout_marginEnd="15dp"
                                                    />

                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <TextView
                                                    android:id="@+id/tag_text2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/with_corner_rectangle"
                                                    android:text="친구와 즐겁게"
                                                    android:fontFamily="@font/inter_semi_bold"
                                                    android:textSize="11sp"
                                                    android:textColor="#7A3E65"
                                                    android:paddingStart="15dp"
                                                    android:paddingEnd="38dp"
                                                    android:paddingTop="7dp"
                                                    android:paddingBottom="7dp"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    android:layout_marginStart="10dp"
                                                    />
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:id="@+id/close2"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text2"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text2"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text2"
                                                    android:layout_marginEnd="9dp"
                                                    />
                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/ic_smile"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text2"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text2"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text2"
                                                    android:layout_marginEnd="15dp"
                                                    />

                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <TextView
                                                    android:id="@+id/tag_text3"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/with_corner_rectangle"
                                                    android:text="연인과 오붓하게"
                                                    android:fontFamily="@font/inter_semi_bold"
                                                    android:textSize="11sp"
                                                    android:textColor="#7A3E65"
                                                    android:paddingStart="15dp"
                                                    android:paddingEnd="38dp"
                                                    android:paddingTop="7dp"
                                                    android:paddingBottom="7dp"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    android:layout_marginStart="10dp"
                                                    />
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:id="@+id/close3"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text3"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text3"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text3"
                                                    android:layout_marginEnd="9dp"
                                                    />
                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/ic_cal_heart"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text3"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text3"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text3"
                                                    android:layout_marginEnd="15dp"
                                                    />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                                <TextView
                                                    android:id="@+id/tag_text4"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/with_corner_rectangle"
                                                    android:text="혼자 낭만있게"
                                                    android:fontFamily="@font/inter_semi_bold"
                                                    android:textSize="11sp"
                                                    android:textColor="#7A3E65"
                                                    android:paddingStart="15dp"
                                                    android:paddingEnd="38dp"
                                                    android:paddingTop="7dp"
                                                    android:paddingBottom="7dp"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    android:layout_marginEnd="4dp"
                                                    android:layout_marginStart="10dp"
                                                    />
                                                <androidx.constraintlayout.widget.ConstraintLayout
                                                    android:id="@+id/close4"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text4"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text4"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text4"
                                                    android:layout_marginEnd="9dp"
                                                    />
                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/ic_city"
                                                    app:layout_constraintEnd_toEndOf="@id/tag_text4"
                                                    app:layout_constraintTop_toTopOf="@id/tag_text4"
                                                    app:layout_constraintBottom_toBottomOf="@id/tag_text4"
                                                    android:layout_marginEnd="15dp"
                                                    />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>

                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E6E6E6"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/make_memo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ic_memo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cal_memo"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="15dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="메모 추가"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/inter_bold"
                                    app:layout_constraintStart_toEndOf="@id/ic_memo"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginBottom="15dp"
                                    />
                                <ImageView
                                    android:id="@+id/plus3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_cal_plus"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="15dp"
                                    />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/memo_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/review_corner_rectangle"
                            android:visibility="gone"
                            >
                                <EditText
                                    android:id="@+id/memo_context"
