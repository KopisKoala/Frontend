<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.recommand.RecommandResultFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:focusable="true"
                    android:padding="20dp"
                    app:searchIcon="@drawable/ic_search"
                    app:iconifiedByDefault="false"
                    app:layout_constraintVertical_weight="1"
                    app:queryHint="원하는 극장이 있다면?" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tag_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    tools:listitem="@layout/list_tag_item"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="20dp"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommand_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:listitem="@layout/list_grid_recommand_item"
                    />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</layout>