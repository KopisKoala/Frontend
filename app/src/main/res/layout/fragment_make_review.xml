<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mypage.MakeReviewFragment">


        <TextView
            android:id="@+id/performance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="시카고(공연명)"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@+id/performance_title" />

        <TextView
            android:id="@+id/tv_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="16dp"
            android:text="공연을 언제 관람하셨나요?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/performance_title" />

        <TextView
            android:id="@+id/tv_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="8dp"
            android:text="공연 전체에 대해 얼마나 만족하시나요?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_when" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:paddingBottom="16dp"
            android:rating="3"
            android:stepSize="1"
            android:isIndicator="false"
            android:progressBackgroundTint="@color/gray"
            android:progressTint="#FFE500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_overall" />

        <!-- Pair RatingBar -->
        <TextView
            android:id="@+id/tv_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="관람하신 페어에 대해 얼마나 만족하시나요?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <RatingBar
            android:id="@+id/rating_pair"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:paddingBottom="16dp"
            android:rating="3"
            android:stepSize="1"
            android:isIndicator="false"
            android:progressBackgroundTint="@color/gray"
            android:progressTint="#FFE500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pair" />

        <!-- 리뷰 입력란 -->

        <!-- 해시태그 입력란 -->
        <Spinner
            android:id="@+id/spinner_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@drawable/review_pair"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_pair" />

        <!-- 저장하기 버튼 -->
        <EditText
            android:id="@+id/et_review"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray"
            android:gravity="top|start"
            android:hint="공연 전반과 페어에 대한 솔직한 리뷰 부탁드립니다."
            android:padding="8dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_pair" />

        <EditText
            android:id="@+id/et_hashtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:hint="#해시태그"
            android:padding="8dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_review"
            tools:layout_editor_absoluteX="95dp" />

        <android.widget.Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_reviewsave"
            android:padding="16dp"
            android:text="저장하기"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_hashtag" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>