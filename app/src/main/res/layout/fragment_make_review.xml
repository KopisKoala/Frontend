<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.mypage.MakeReviewFragment"
        android:background="@color/white"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/performance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시카고(공연명)"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
             />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6"
            />

        <TextView
            android:id="@+id/tv_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="공연을 언제 관람하셨나요?"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:textSize="13sp"
         />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:hint="날짜 선택"
          />

        <TextView
            android:id="@+id/tv_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공연 전체에 대해 얼마나 만족하시나요?"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="18dp"
             />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"
            android:isIndicator="false"
            android:layout_marginTop="9dp"
            android:progressBackgroundTint="@color/gray"
            android:progressTint="#FFE500"
          />

        <TextView
            android:id="@+id/tv_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관람하신 페어에 대해 얼마나 만족하시나요?"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="18dp"
            />

        <RatingBar
            android:id="@+id/rating_pair"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:paddingBottom="16dp"
            android:rating="3"
            android:stepSize="1"
            android:isIndicator="false"
            android:layout_marginTop="9dp"
            android:progressBackgroundTint="@color/gray"
            android:progressTint="#FFE500"
            />

        <Spinner
            android:id="@+id/spinner_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            />

        <EditText
            android:id="@+id/et_review"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/review_corner_rectangle"
            android:gravity="top|start"
            android:hint="공연 전반과 페어에 대한 솔직한 리뷰 부탁드립니다."
            android:textSize="13sp"
            android:padding="8dp"
            android:paddingBottom="16dp"
             />

        <EditText
            android:id="@+id/et_hashtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/purple"
            android:hint="#해시태그 1개만 입력해주세요"
            android:padding="8dp"
            android:paddingBottom="16dp"
            android:background="@null"
            tools:layout_editor_absoluteX="95dp" />

        </LinearLayout>
        <android.widget.Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:layout_marginTop="18dp"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:textSize="20dp"
            android:text="저장하기"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"

            />

    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</layout>
