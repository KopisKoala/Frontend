<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="148dp"
    android:layout_height="wrap_content"
    android:id="@+id/recommand_item"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/recommand_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_recommand_post"
        android:background="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/performance_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020 신년 콘서트 VOICE OF THE MAS.."
        android:textSize="13.5sp"
        android:fontFamily="@font/inter_semi_bold"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/performance_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인천문화예술회관 대공연장 (1.2km)"
        android:textSize="9.5sp"
        android:fontFamily="@font/inter_medium"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="1"
            android:stepSize="0.5"
            android:layout_marginTop="8dp"
            android:progressTint="#FFE500"
            android:progressBackgroundTint="@color/gray"
            />
        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="(432)"
            android:layout_marginTop="9dp"
            android:textColor="#6D6363"
            android:textSize="10sp"
            />

    </LinearLayout>



</LinearLayout>