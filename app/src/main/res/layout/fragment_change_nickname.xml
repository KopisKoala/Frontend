<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mypage.ChangeNicknameFragment">

    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="@color/white"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/btn_stroke_rectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="닉네임을 입력해주세요."
                android:paddingStart="15dp"
                android:textSize="14sp"
                />

                <ImageView
                    android:id="@+id/change_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:src="@drawable/bottom_purple_rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="변경하기"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@id/change_nickname"
                    app:layout_constraintTop_toTopOf="@id/change_nickname"
                    app:layout_constraintEnd_toEndOf="@id/change_nickname"
                    app:layout_constraintBottom_toBottomOf="@id/change_nickname"
                    />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edit"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 닉네임 : "
                    android:textColor="#80000000"

                    />
                <TextView
                    android:id="@+id/current_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뮤덕 84"
                    android:textColor="#80000000"
                    />

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
    </ScrollView>

</layout>